<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Placeholder for Map -->
    <TextView
        android:id="@+id/map_placeholder"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Map Placeholder"
        android:textColor="#757575"
        android:textSize="18sp" />

    <!-- Form Below the Placeholder -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/etPickupPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Pick-up Point"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etDropOffPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Drop-off Point"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/etNumberOfPassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Passengers"
            android:inputType="number"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnSubmitRideRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Request"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</LinearLayout>
